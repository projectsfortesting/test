@using DevOpsSolution.Models;

@model DevOpsSolution.Models.SelectGroupRolesViewModel

@*@{
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}*@
<h3>Group @Html.DisplayFor(model => model.GroupName):Permissions</h3>


@using (Html.BeginForm("GroupRoles", "Groups", FormMethod.Post, new { encType = "multipart/form-data", name = "myform" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.GroupName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.GroupId)
            </div>
        </div>
      
        <table class="table table-bordered">
            <tr class="bg-gray" style="font-family:Arial;font-size:13px;color:#666666">
                <th>
                    Select
                </th>
                <th>
                    Permissions
                </th>
                <th>
                    Description
                </th>
            </tr>
            @Html.EditorFor(model => model.Roles)
        </table>
        <br />
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

