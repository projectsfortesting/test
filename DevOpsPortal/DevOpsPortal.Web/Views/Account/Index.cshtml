<script>
    $(document).ready(function () {

        var isnotauthorized = '@ViewData["OpenAuthorizationPopup"]';

        if (isnotauthorized)
            {
                $('#authorizefailedPopup').modal('show');
                $('#indexcontent').hide();
            }
            else
            {
                $('#authorizefailedPopup').modal('hide');
                $('#indexcontent').show();
            }

        });

</script>
