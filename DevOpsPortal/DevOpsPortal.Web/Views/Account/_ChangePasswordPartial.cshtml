@using Microsoft.AspNetCore.Identity
@using DevOpsSolution.Models;
@model DevOpsSolution.Models.ManageUserViewModel
@*@{
        Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    }*@

<p>You're logged in as <strong>@User.Identity.Name</strong>.</p>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Password Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group form-inline">
        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
            <button type="button" class="btn btn-info btn-xs glyphicon glyphicon glyphicon-eye-open" data-title="status" id="View_OldPassword" onclick="showHidePassword(this.id)"></button>

        </div>
    </div>
    <div class="form-group form-inline ">
        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            <button type="button" class="btn btn-info btn-xs glyphicon glyphicon glyphicon-eye-open" data-title="status" id="View_NewPassword" onclick="showHidePassword(this.id)"></button>

        </div>



    </div>
    <div class="form-group form-inline">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            <button type="button" class="btn btn-info btn-xs glyphicon glyphicon glyphicon-eye-open" data-title="status" id="View_ConfirmPassword" onclick="showHidePassword(this.id)"></button>

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change password" class="btn btn-default" />
        </div>
    </div>
}
